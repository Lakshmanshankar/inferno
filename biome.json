{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"files": {
		"ignore": [
			"node_modules",
			"dist",
			"out",
			"build",
			"public",
			"tsconfig.*",
			"*.gen.*"
		],
		"include": [
			"**/*.js",
			"**/*.jsx",
			"**/*.ts",
			"**/*.tsx",
			"**/*.scss",
			"**/*.css",
			"**/*.json",
			"**/*.html"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 80,
		"ignore": ["node_modules", "dist", "out", "build", "public", "*.gen.*"]
	},
	"organizeImports": { "enabled": true },
	"linter": {
		"enabled": true,
		"rules": {
			"a11y": {
				"useKeyWithClickEvents": "off"
			},
			"suspicious": {
				"noConsoleLog": "warn",
				"noEmptyInterface": "off",
				"noArrayIndexKey": "warn",
				"noExplicitAny": "warn"
			},
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "warn",
				"useExhaustiveDependencies": "warn",
				"noChildrenProp": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"useImportType": "warn"
			},
			"complexity": {
				"noForEach": "off"
			},
			"performance": {
				"noDelete": "off"
			}
		}
	},
	"overrides": []
}
